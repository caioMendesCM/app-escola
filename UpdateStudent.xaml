<Window x:Class="LUZ_TREINAMENTO.UpdateStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LUZ_TREINAMENTO"
        mc:Ignorable="d"
        Title="UpdateStudent" Height="402" Width="258">
    <Grid>
        <Label Content="{Binding Id}" HorizontalAlignment="Center" Margin="0,58,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,94,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Center" Margin="0,148,0,0" TextWrapping="Wrap" Text="{Binding Grade}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salvar" HorizontalAlignment="Center" Margin="0,218,0,0" VerticalAlignment="Top" Click="ButtonClick"/>

    </Grid>
</Window>
