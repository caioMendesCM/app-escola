<Window x:Class="LUZ_TREINAMENTO.CreateStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LUZ_TREINAMENTO"
        mc:Ignorable="d"
        Title="CreateStudent" Height="386" Width="240">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,91,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Center" Margin="0,147,0,0" TextWrapping="Wrap" Text="{Binding Id}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Center" Margin="0,199,0,0" TextWrapping="Wrap" Text="{Binding Grade}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salvar" Click="BtnSave" HorizontalAlignment="Center" Margin="0,277,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
